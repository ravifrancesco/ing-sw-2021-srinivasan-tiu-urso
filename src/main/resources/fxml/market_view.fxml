                <Button fx:id="button3" mnemonicParsing="false" onMouseClicked="#button3Pressed" prefHeight="38.0"
                        prefWidth="55.0" text="↑" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </children>
        </GridPane>
        <Button fx:id="backButton" layoutX="173.0" layoutY="618.0" mnemonicParsing="false"
                onMouseClicked="#onBackPressed" prefHeight="62.0" prefWidth="119.0"
                style="-fx-background-color: #323232;" text="BACK" textFill="WHITE">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </Button>
    </children>
